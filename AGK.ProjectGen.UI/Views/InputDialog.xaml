<Window x:Class="AGK.ProjectGen.UI.Views.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ввод" Height="200" Width="400"
        SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BgPrimaryBrush}"
        ResizeMode="NoResize"
        ShowInTaskbar="False">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Label -->
        <TextBlock Grid.Row="0" x:Name="PromptText" Style="{StaticResource LabelStyle}" 
                   Margin="0,0,0,8" TextWrapping="Wrap"/>
        
        <!-- Input -->
        <TextBox Grid.Row="1" x:Name="InputTextBox" 
                 Style="{StaticResource ModernTextBoxStyle}"
                 Margin="0,0,0,16"/>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Отмена" Padding="16,8" 
                    Style="{StaticResource SecondaryButtonStyle}" 
                    IsCancel="True" Click="Cancel_Click"/>
            <Button Content="OK" Padding="24,8" Margin="10,0,0,0" 
                    Style="{StaticResource PrimaryButtonStyle}" 
                    IsDefault="True" Click="Ok_Click"/>
        </StackPanel>
    </Grid>
</Window>
