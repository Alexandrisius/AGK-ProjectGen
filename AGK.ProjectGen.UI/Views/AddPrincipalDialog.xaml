<Window x:Class="AGK.ProjectGen.UI.Views.AddPrincipalDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить группу или пользователя" Height="340" Width="450"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BgPrimaryBrush}"
        ResizeMode="NoResize"
        ShowInTaskbar="False">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Type -->
        <TextBlock Grid.Row="0" Text="Тип" Style="{StaticResource LabelStyle}" Margin="0,0,0,6"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,16">
            <RadioButton x:Name="GroupRadio" Content="Группа" IsChecked="True" Margin="0,0,20,0"/>
            <RadioButton x:Name="UserRadio" Content="Пользователь"/>
        </StackPanel>
        
        <!-- Name -->
        <TextBlock Grid.Row="2" Text="Имя (без домена)" Style="{StaticResource LabelStyle}" Margin="0,0,0,6"/>
        <TextBox Grid.Row="3" x:Name="NameTextBox" Style="{StaticResource ModernTextBoxStyle}" Margin="0,0,0,16"/>
        
        <!-- Domain -->
        <TextBlock Grid.Row="4" Text="Домен (необязательно)" Style="{StaticResource LabelStyle}" Margin="0,0,0,6"/>
        <TextBox Grid.Row="5" x:Name="DomainTextBox" Style="{StaticResource ModernTextBoxStyle}" Margin="0,0,0,16"
                 ToolTip="Например: CORP или оставьте пустым для локальных групп"/>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Отмена" Padding="16,8" 
                    Style="{StaticResource SecondaryButtonStyle}" 
                    IsCancel="True" Click="Cancel_Click"/>
            <Button Content="Добавить" Padding="24,8" Margin="10,0,0,0" 
                    Style="{StaticResource PrimaryButtonStyle}" 
                    IsDefault="True" Click="Add_Click"/>
        </StackPanel>
    </Grid>
</Window>
