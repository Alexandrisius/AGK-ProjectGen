<Window x:Class="AGK.ProjectGen.UI.Views.AddPrincipalDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить группу или пользователя" Height="400" Width="450"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BgPrimaryBrush}"
        ResizeMode="NoResize"
        ShowInTaskbar="False">
    
    <StackPanel Margin="20">
        <!-- Type -->
        <TextBlock Text="Тип" Style="{StaticResource LabelStyle}" Margin="0,0,0,6"/>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
            <RadioButton x:Name="GroupRadio" Content="Группа" IsChecked="True" Margin="0,0,20,0"/>
            <RadioButton x:Name="UserRadio" Content="Пользователь"/>
        </StackPanel>
        
        <!-- Name -->
        <TextBlock Text="Имя (без домена)" Style="{StaticResource LabelStyle}" Margin="0,0,0,6"/>
        <TextBox x:Name="NameTextBox" Style="{StaticResource ModernTextBoxStyle}" Margin="0,0,0,16"/>
        
        <!-- Domain -->
        <TextBlock Text="Домен (необязательно)" Style="{StaticResource LabelStyle}" Margin="0,0,0,6"/>
        <TextBox x:Name="DomainTextBox" Style="{StaticResource ModernTextBoxStyle}" Margin="0,0,0,16"
                 ToolTip="Например: CORP или оставьте пустым"/>
        
        <!-- Description -->
        <TextBlock Text="Описание (для поиска)" Style="{StaticResource LabelStyle}" Margin="0,0,0,6"/>
        <TextBox x:Name="DescriptionTextBox" Style="{StaticResource ModernTextBoxStyle}" Margin="0,0,0,20"
                 ToolTip="Например: ФИО или назначение группы"/>
        
        <!-- Buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Отмена" Padding="16,8" 
                    Style="{StaticResource SecondaryButtonStyle}" 
                    IsCancel="True" Click="Cancel_Click"/>
            <Button Content="Добавить" Padding="24,8" Margin="10,0,0,0" 
                    Style="{StaticResource PrimaryButtonStyle}" 
                    IsDefault="True" Click="Add_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
