<Application x:Class="AGK.ProjectGen.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:AGK.ProjectGen.UI"
             xmlns:conv="clr-namespace:AGK.ProjectGen.UI.Converters"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles.xaml"/>
                <ResourceDictionary Source="Resources/Languages/Ru-ru.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <!-- Converters -->
            <conv:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
            <conv:NullToVisibilityConverter x:Key="InverseNullToVisibilityConverter" Invert="True"/>
            <conv:NodeOperationToVisibilityConverter x:Key="NodeOperationToVisibilityConverter"/>
            <conv:EnumToStringConverter x:Key="EnumToStringConverter"/>
            <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <conv:BoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter" Invert="True"/>
            <conv:NodeOperationDeleteToVisibilityConverter x:Key="NodeOperationDeleteToVisibilityConverter"/>
            <conv:NodeOperationToEnabledConverter x:Key="NodeOperationToEnabledConverter"/>
            <conv:InverseBoolConverter x:Key="InverseBoolConverter"/>
            <conv:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>
            <conv:NullToBoolConverter x:Key="NullToBoolConverter"/>
            <conv:EqualityConverter x:Key="EqualityConverter"/>
        </ResourceDictionary>
    </Application.Resources>

</Application>
